<p id="notice"><%= notice %></p>

<h1>
  <%= @post.name %>
</h1>

<p>
   <%= image_tag @post.featured_image %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Categories</h2>
<ul>
  <%- @post.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
